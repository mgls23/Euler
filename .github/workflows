# FILEPATH: /Users/mgls23/git/Euler/.github/workflows/run-tests.yml
name: Run Tests

on: [push]

jobs:
    test:
        runs-on: ubuntu-latest

        steps:
        - uses: actions/checkout@v2

        - name: Set up Python
            uses: actions/setup-python@v2
            with:
                python-version: '3.11'

        - name: Install dependencies
            run: |
                python -m pip install --upgrade pip
                pip install -r euler/requirements.txt

        - name: Run tests
            run: |
                cd euler
                pytest unittests
